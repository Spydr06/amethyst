{ lib, pkgs, stdenv, ... }:
lib.mkSystemConfig {
    imports = [
    ];

    env = {

    };

    boot.initrd.enable = true;

    boot.kernelArgs = [
        "loglevel=debug" "log-syscalls"
    ];

    systemPackages = with pkgs; [
        (amethyst-kernel.override { sanitize = [ "undefined" ]; })
        initsys
    ];

    systemVersion = builtins.trim $ stdenv.readFile "${pkgs.amethyst-source}/source/version";
}

