with import ./../geode.shard; {
    libc = rec {
        name = "libc";
        version = "0.0.1";

        sourceDir = util.paths.store + name;
        buildDir = sourceDir + "build";

        build = util.shell.make ["-C" sourceDir];

        install = util.shell.make ["-C" sourceDir "install" ("PREFIX=" + $ builtins.toString util.paths.prefix)];
    };
}
