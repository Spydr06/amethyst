let
    dl = system.dlOpen ./mylib.so;
    
    greet = xs :: list: let
        f = system.dlSym dl "greet" $ with builtins; 
            ffi.cFunc ffi.cVoid [ (ffi.cPointer $ ffi.cPointer ffi.cChar) ffi.cUnsignedInt ];
        in f xs $ builtins.length xs;
in
    builtins.toString $ greet [ "hallo" "welt" "..." ]

